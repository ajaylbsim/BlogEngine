

<div style="margin-top: -7%">
    <textarea id="text-input" ng-model="editorData"  ng-change="convert()"rows="22" cols="5"
              style=" padding-left:2%;margin-top:0% ;
  margin-left:-50px;float:left;background-color: #ffffff;padding-top: 2px; width: 55%;
              ">
        {{editorData}}
    </textarea>


    <div id="preview" class="container" data-ng-bind-html="previewData"    style="height:inherit;width: 54%;margin-top: 3px;color:#000000;background-color:white;

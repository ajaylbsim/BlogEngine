<script type="text/javascript">

    function getUserProfile(email){


        console.log("it is working fine"+email);

        $.post( 'viewAuthorProfile',{"email":email},function(data){

            data.forEach(function(element){console.log(element);

                $("p#userprofile").text("  name =  "+element.AuthorName+"  email =  "+element.email+" age =  "+element.age);
            })


        } );


    }

</script>


